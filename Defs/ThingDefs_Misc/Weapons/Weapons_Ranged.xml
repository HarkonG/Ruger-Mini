<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <!--===== Mini-14 =====-->
  <ThingDef ParentName="BaseBullet">
    <defName>GN_Bullet_Ruger_14Mini</defName>
    <label>Mini-14 rifle bullet</label>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>14</damageAmountBase>
      <stoppingPower>1.0</stoppingPower>
      <speed>70</speed>
    </projectile>
    <graphicData>
      <texPath>Things/Projectile/Bullet_small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>GN_Ruger_14Mini</defName>
    <label>Mini-14</label>
    <description>The Mini-14 is a lightweight semi-automatic rifle manufactured by Ruger used by military personnel, law enforcement personnel, and civilians.</description>
    <graphicData>
      <texPath>Things/Weapons/GN_Ruger_14Mini</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <Mass>3</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.80</AccuracyMedium>
      <AccuracyLong>0.78</AccuracyLong>
      <RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>60</Steel>
      <WoodLog>10</WoodLog>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
      <researchPrerequisite>BlowbackOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>GN_Bullet_Ruger_14Mini</defaultProjectile>
        <warmupTime>1</warmupTime>
        <range>35</range>
        <soundCast>GN_Shot_Ruger_Mini</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

